nextflow_workflow {

    name "Test Workflow BLAST_TAXONOMY"
    script "subworkflows/blast_taxonomy/main.nf"
    workflow "BLAST_TAXONOMY"
    
    test("Should run without failures") {

        when {
            params {
                outdir = "tests/results"
                primer_set = "16S_ILM_ASU184_meat"
            }
            workflow {
                """
                // define inputs of the workflow here. Example:
                input[0] = Channel.of( [ [sample_id:'Lasagne_clean'], file("${projectDir}/tests/data/Lasagne_clean_ASVs.fasta")] )
                input[1] = Channel.of( [ [database:'lrna', version:'259_2023-12-17'], file("${projectDir}/tests/refs/foodme2/1.0/databases/lrna") ] )
                input[2] = Channel.of( [ file("${projectDir}/tests/refs/foodme2/1.0/new_taxdump/nodes.dmp"), file("${projectDir}/tests/refs/foodme2/1.0/new_taxdump/rankedlineage.dmp"), file("${projectDir}/tests/refs/foodme2/1.0//new_taxdump/merged.dmp")])
                input[3] = file("${projectDir}/tests/refs/foodme2/1.0/taxdb")
                input[4] = Channel.of(file("${projectDir}/assets/blocklist.txt"))
                """
            }
        }

        then {
            assert workflow.success
            with(workflow.out.composition_json) {
                with(get(0)) {
                    assert path(get(1)).md5 == "66551b1b36eb2b9417bf4ac4b5d87909"
                 }
            }
            with(workflow.out.consensus) {
                with(get(0)) {
                    assert path(get(1)).md5 == "2ddbc13176a7e86713e93f268fbde2d7"
                }
            }
        }

    }

}
