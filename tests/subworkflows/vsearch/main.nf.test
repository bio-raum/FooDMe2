nextflow_workflow {

    name "Test Workflow VSEARCH_WORKFLOW"
    script "subworkflows/vsearch/main.nf"
    workflow "VSEARCH_WORKFLOW"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                outdir = "tests/results"
                primer_set = "16S_ILM_ASU184_meat"
            }
            workflow {
                """
                // define inputs of the workflow here. Example:
                input[0] = Channel.of( [ [sample_id:'Lasagne_clean', single_end:false], [ file("${projectDir}/tests/data/Lasagne_clean_1.primertrim.fastq.gz"), file("${projectDir}/tests/data/Lasagne_clean_2.primertrim.fastq.gz") ] ])
                """
            }
        }

        then {
            assert workflow.success
            with(workflow.out.otus) {
                with(get(0)) {
                    assert path(get(1)).md5 == "d41d8cd98f00b204e9800998ecf8427e"
                }
            }
        }

    }

}
