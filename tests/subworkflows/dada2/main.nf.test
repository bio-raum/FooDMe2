nextflow_workflow {

    name "Test Workflow DADA2_WORKFLOW"
    script "subworkflows/dada2/main.nf"
    workflow "DADA2_WORKFLOW"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                outdir = "tests/results"
                primer_set = "16S_ILM_ASU184_meat"
            }
            workflow {
                """
                // define inputs of the workflow here. Example:
                input[0] = Channel.of( [ [sample_id:'Lasagne_clean', single_end:false], [ file("${projectDir}/tests/data/ERR10436092_1.adaptertrim.fastq.gz"), file("${projectDir}/tests/data/ERR10436092_2.adaptertrim.fastq.gz") ] ])
                """
            }
        }

        then {
            assert workflow.success
            with(workflow.out.otus) {
                with(get(0)) {
                    assert path(get(1)).md5 == "68b329da9893e34099c7d8ad5cb9c940"
                }
            }
        }

    }

}
