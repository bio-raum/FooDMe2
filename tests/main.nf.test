nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("Should run without failures") {

        when {
            params {
                outdir = "tests/results"
                input = "${projectDir}/tests/data/samples.nf-test.tsv"
	            primer_set = "16S_ILM_ASU184_meat"
	            run_name = "pipeline_test"
                reference_base = "${projectDir}/tests/refs"
            }
        }

        then {
            assert workflow.success
        }

    }

}
