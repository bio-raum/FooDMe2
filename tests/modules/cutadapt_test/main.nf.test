nextflow_process {

    name "Test Process CUTADAPT"
    script "modules/cutadapt_test/main.nf"
    process "CUTADAPT"

    test("Should run without failures") {

        when {
            params {
                outdir = "tests/results"
                cutadapt_trim_3p = true
                cutadapt_options = "-m 40"
            }
            process {
                """
                input[0] = Channel.of( [ [sample_id:'Lasagne', single_end:false], [ file("${projectDir}/tests/data/ERR10436092_1.adaptertrim.fastq.gz"), file("${projectDir}/tests/data/ERR10436092_2.adaptertrim.fastq.gz") ] ] )
                input[1] = file("${projectDir}/tests/data/16S_ASU184.disambiguated.fasta")
                input[2] = file("${projectDir}/tests/data/16S_ASU184.disambiguated.rc.fasta")
                """
            }
        }

        then {
            assert process.success
            with(process.out.reads) {
                with(get(0)) {
                    assert path(get(1).get(0)).md5 == "c9064f8844209d6977e9acd7df9d06bc"

                }
            }
        }

    }

}
