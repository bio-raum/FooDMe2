params {
    primers {
        'amniotes_dobrovolny' {
            description = "Amniote primer set described in Dobrovolny et al. 2019"
            gene = "lrna"
            doi = "10.1016/j.foodchem.2018.08.032"
            maxee = 2.0
            minlen = 70
            maxlen = 100
            ptrimmer_config = "${baseDir}/assets/ptrimmer/amniotes_dobrovolny.txt"
            fasta = "${baseDir}/assets/primers/amniotes_dobrovolny.fasta"
            taxid_filter = 32524
            // cutadapt = true
            cutadapt_trim_3p = true
        }
    }
}