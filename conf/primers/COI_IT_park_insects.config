params {
    
    database = "co1" 
    fasta = "${baseDir}/assets/primers/COI_park.fasta"

    disable_low_complexity = false
    blast_low_complexity = "-dust no -soft_masking false"
    blast_evalue = "1e-20"
    blast_qcov = 100
    blast_perc_id = 97
    blast_bitscore_diff = 4
    blast_min_consensus = 0.51

    taxid_filter = 50557 // insecta

    non_overlapping = false

    vsearch = false

    max_mismatch = 1
    remove_chimera = true
    amplicon_min_length = 340
    amplicon_max_length = 460
    max_expected_errors = 20.0 // 0.05 error rate
    max_ns = 0
    merging_max_mismatch = 1

    pacbio = false
    iontorrent = true
    ont = false

    fastp_options = "-l 50 -3 --cut_tail_window_size 4 --cut_tail_mean_quality 20"

    cutadapt_trim_3p        = false
    cutadapt_trim_flex      = true
    cutadapt_options        = "-m 40"

} 