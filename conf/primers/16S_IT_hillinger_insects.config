params {

    database = "lrna"
    fasta = "${baseDir}/assets/primers/16S_hillinger.fasta"

    disable_low_complexity = false
    blast_low_complexity = "-dust no -soft_masking false"
    blast_evalue = "1e-20"
    blast_qcov = 100
    blast_perc_id = 97
    blast_bitscore_diff = 4
    blast_min_consensus = 0.51 

    non_overlapping = false

    vsearch = false

    taxid_filter = 50557 // insecta

    max_mismatch = 1
    remove_chimera = true
    max_ns = 0
    merging_max_mismatch = 1

    max_expected_errors = 2.0
    amplicon_min_length = 150
    amplicon_max_length = 250
    
    pacbio = false
    iontorrent = true
    ont = false

    fastp_options = "-l 50 -3 --cut_tail_window_size 4 --cut_tail_mean_quality 25"

    cutadapt_trim_3p    = true
    cutadapt_trim_flex  = false
    cutadapt_options    = "-m 40"

} 